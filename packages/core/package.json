{
    "name": "eic-modern",
    "version": "1.0.2",
    "description": "A modern ES6 / TypeScript library to validate and generate EIC codes",
    "type": "module",
    "main": "./dist/index.js",
    "module": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "import": "./dist/index.js",
            "types": "./dist/index.d.ts"
        }
    },
    "files": [
        "dist/index.js",
        "dist/index.d.ts",
        "dist/index.d.ts.map",
        "README.md"
    ],
    "scripts": {
        "build": "vite build && tsc --emitDeclarationOnly --outDir dist && cp ../../README.md .",
        "dev": "vite build --watch",
        "clean": "rm -rf dist && rm -f README.md",
        "prepublishOnly": "npm run build",
        "test": "vitest",
        "test:run": "vitest run",
        "test:coverage": "vitest run --coverage"
    },
    "devDependencies": {
        "@types/node": "^24.2.1",
        "@vitest/coverage-v8": "^2.0.0",
        "vite": "^5.0.0",
        "vitest": "^2.0.0"
    },
    "keywords": [
        "typescript",
        "library",
        "modern"
    ],
    "author": "Kövesdi György",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/samzlab/eic-modern.git"
    }
}
