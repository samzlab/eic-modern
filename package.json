{
    "name": "eic-modern-ws",
    "version": "1.0.0",
    "description": "Workspace for EIC Modern library and demo",
    "type": "module",
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "build": "npm run build --workspaces --if-present",
        "build:core": "npm run build -w packages/core",
        "build:demo": "npm run build -w packages/demo",
        "build:pages": "npm run build:core && npm run build:demo",
        "dev": "concurrently \"npm run dev -w packages/core\" \"npm run dev -w packages/demo\"",
        "dev:core": "npm run dev -w packages/core",
        "dev:demo": "npm run dev -w packages/demo",
        "start": "npm run dev:demo",
        "test": "npm run test:run --workspaces --if-present",
        "test:coverage": "npm run test:coverage --workspaces --if-present",
        "lint": "npm run lint --workspaces --if-present",
        "format": "prettier --write .",
        "clean": "npm run clean --workspaces --if-present",
        "publish:core": "npm publish -w packages/core",
        "prepublish": "npm run build:core"
    },
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^6.0.0",
        "@typescript-eslint/parser": "^6.0.0",
        "concurrently": "^9.2.0",
        "eslint": "^8.45.0",
        "prettier": "^3.0.0",
        "typescript": "^5.9.2",
        "vite-plugin-dts": "^4.5.4"
    },
    "engines": {
        "node": ">=18"
    }
}
